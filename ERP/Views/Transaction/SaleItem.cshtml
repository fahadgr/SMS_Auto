<script type="text/javascript">






    function GetItem (ItemCode) {
      
        $.ajax({
            type: "POST",
            url: "/Transaction/GetSingleItem",
            dataType: "json",
            contentType: 'application/json',
            data: JSON.stringify({ ItemCode: ItemCode }),
            contentType: "application/json;charset=utf-8",
            success: function (result) {
                if (result.length > 0) {
                    $.each(result, function (index, obj) {
                        document.getElementById("ItemCode").value = obj.ItemCode;
                        document.getElementById("ItemDesc").value = obj.ItemDesc;
                        document.getElementById("ddlBrand").value = obj.Brand;
                        document.getElementById("ddlCategory").value = obj.Category;
                        document.getElementById("ddlSubCategory").value = obj.SubCategory;
                        document.getElementById("stdWeight").value = obj.stdWeight;
                        document.getElementById("PackSize").value = obj.PackSize;
                        document.getElementById("SaleRateReg").value = obj.SaleRateReg;
                        document.getElementById("SaleRateUnReg").value = obj.SaleRateUnReg;
                        document.getElementById("SaleGSTPer").value = obj.SaleGSTPer;
                        document.getElementById("SaleFurtherTaxPer").value = obj.SaleFurtherTaxPer;
                        $('#Img-Item').attr('src', obj.ItemPic);
                        var Type = obj.WeightType;
                        if (Type === "gm") {
                            var radiobtn = document.getElementById("gmId");
                            radiobtn.checked = true;
                        }
                        if (Type === "ltr") {
                            var radiobtn = document.getElementById("LtrId");
                            radiobtn.checked = true;
                        }
                        if (Type === "Kg") {
                            var radiobtn = document.getElementById("KgId");
                            radiobtn.checked = true;
                        }
                        if (Type === "ml") {
                            var radiobtn = document.getElementById("mlId");
                            radiobtn.checked = true;
                        }
                     
                    });
                }
               
                $("#ItemModal").modal("hide");

            }
        });
    }

</script>